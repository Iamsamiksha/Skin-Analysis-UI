---
import Container from "./Container.astro";
---

<div class="relative py-16">
  <!-- Gradient Background -->
  <div aria-hidden="true" class="absolute inset-0 h-max w-full m-auto grid grid-cols-2 -space-x-52 opacity-40 dark:opacity-20">
    <div class="blur-[106px] h-56 bg-gradient-to-br from-[#4d39ff] to-purple-400"></div>
    <div class="blur-[106px] h-32 bg-gradient-to-r from-cyan-400 to-sky-300"></div>
  </div>

  <Container>
    <div class="relative flex flex-col items-center text-center space-y-6">
      <!-- Icon -->
      <img src="/icons/facial.png" alt="Facial Scan Icon" class="w-16 h-16 mb-4" />

      <!-- Heading -->
      <h1 class="text-4xl font-semibold text-[#4d39ff]">Get Your Skin Analysis Now</h1>

      <!-- Description -->
      <p class="text-lg text-gray-700 dark:text-gray-300">
        Discover AI-driven skin insights and personalized recommendations with just one scan.
      </p>

      <!-- Rounded Button -->
      <a href="#" class="mt-4 px-8 py-4 text-lg font-medium text-white bg-[#4d39ff] rounded-full hover:bg-[#3a2e61] transition shadow-lg">
        Test Yours
      </a>
    </div>
  </Container>
</div>
