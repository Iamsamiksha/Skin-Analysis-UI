---
import Container from "./Container.astro"
---

<div class="relative overflow-hidden" id="home">
    <!-- Animated Wavy Background -->
    <div class="absolute inset-0 -z-10 transition-all duration-500" id="wave-container">
        <svg class="absolute bottom-0 left-0 w-full h-auto animate-wave" viewBox="0 0 1440 320" xmlns="http://www.w3.org/2000/svg">
            <defs>
                <linearGradient id="gradient" x1="50%" y1="0%" x2="50%" y2="100%">
                    <stop offset="0%" style="stop-color:#4D39FF;stop-opacity:1" />
                    <stop offset="50%" style="stop-color:#6A4DFF;stop-opacity:0.9" />
                    <stop offset="100%" style="stop-color:#8A5AFF;stop-opacity:0.8" />
                </linearGradient>
            </defs>
            <path class="wave-path" fill="url(#gradient)" fill-opacity="1" d="M0,160 Q360,220 720,160 T1440,160 L1440,320 L0,320 Z"></path>
        </svg>
    </div>

    <Container>
        <div class="relative flex flex-col items-center justify-center min-h-screen text-center">
            <div class="lg:w-2/3 mx-auto">
                <h1 class="text-gray-900 dark:text-white font-extrabold text-5xl md:text-6xl xl:text-7xl tracking-tight font-[Bebas Neue]">
                    <span class="text-primary dark:text-white">SkinVision AI.</span>
                </h1>
                
                <p class="mt-4 text-lg md:text-xl text-gray-700 dark:text-gray-300">
                    Reveal, Analyze, and Rejuvenate Your Skin
                </p>
                <div class="mt-12 flex flex-wrap justify-center gap-y-4 gap-x-6">
                    <a
                    href="http://127.0.0.1:5000/"
                    class="relative flex h-12 w-48 items-center justify-center px-6 rounded-full border-2 border-transparent bg-gray-50/50 backdrop-blur-md transition-all duration-300 
                           before:absolute before:inset-0 before:rounded-full before:bg-gradient-to-r before:from-[#4D39FF] before:via-[#6A4DFF] before:to-[#8A5AFF] 
                           before:z-[-1] before:transition-transform before:duration-300 
                           hover:before:scale-105 hover:shadow-lg active:scale-95 active:shadow-md"
                >
                    <span class="relative text-lg font-semibold text-white">Test Yours</span>
                </a>
                
        </div>
    </Container>
</div>

<style>
@keyframes waveMotion {
    0% { d: path("M0,160 Q360,220 720,160 T1440,160 L1440,320 L0,320 Z"); }
    50% { d: path("M0,180 Q360,140 720,180 T1440,140 L1440,320 L0,320 Z"); }
    100% { d: path("M0,160 Q360,220 720,160 T1440,160 L1440,320 L0,320 Z"); }
}

.wave-path {
    animation: waveMotion 8s ease-in-out infinite;
}

.scroll-effect {
    opacity: 0.7;
    transition: opacity 0.5s ease-in-out;
}
</style>

<script>
document.addEventListener("scroll", function() {
    let scrollPosition = window.scrollY;
    let waveContainer = document.getElementById("wave-container");
    let fadePoint = 300; // Adjust this value as needed
    
    if (scrollPosition > fadePoint) {
        waveContainer.classList.add("scroll-effect");
    } else {
        waveContainer.classList.remove("scroll-effect");
    }
});
</script>
